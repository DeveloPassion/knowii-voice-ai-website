{
    "name": "knowii-voice-ai-website",
    "private": true,
    "version": "0.0.1",
    "description": "Marketing website for Knowii Voice AI",
    "author": "DeveloPassion",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/DeveloPassion/knowii-voice-ai-website.git"
    },
    "bugs": {
        "url": "https://github.com/DeveloPassion/knowii-voice-ai-website/issues"
    },
    "homepage": "https://voice-ai.knowii.net",    
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "prepare": "husky",
        "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
        "format": "prettier --write .",
        "tsc": "tsc --noEmit",
        "tsc:watch": "tsc --noEmit --watch --preserveWatchOutput",
        "tscw": "npm run tsc:watch",
        "commit": "cz",
        "cm": "npm run commit",
        "commit:lint": "commitlint --from HEAD~1 --to HEAD --verbose",
        "release": "read -p 'Enter tag name: ' TAG && git tag \"$TAG\" && git push origin \"$TAG\" && echo \"Tag $TAG created and pushed. Deployment will start automatically.\""
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-customizable"
        },
        "cz-customizable": {
            "config": ".cz-config.cjs"
        }
    },
    "engines": {
        "node": ">=20.0",
        "npm": ">=10.1.0"
    },
    "dependencies": {
        "@tailwindcss/vite": "4.1.16",
        "clsx": "^2.1.1",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-icons": "5.5.0",
        "react-router": "^7.9.3",
        "tailwind-merge": "^3.3.1"
    },
    "devDependencies": {
        "@commitlint/cli": "20.1.0",
        "@commitlint/config-conventional": "20.0.0",
        "@eslint/js": "^9.36.0",
        "@types/node": "24.9.1",
        "@types/react": "^19.1.16",
        "@types/react-dom": "^19.1.9",
        "@vitejs/plugin-react": "5.1.0",
        "commitizen": "4.3.1",
        "cz-customizable": "7.5.1",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-react": "^7.37.5",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "lint-staged": "16.2.6",
        "prettier": "3.6.2",
        "prettier-plugin-tailwindcss": "^0.7.1",
        "tailwindcss": "4.1.16",
        "typescript": "^5.9.3",
        "typescript-eslint": "8.46.2",
        "vite": "6.4.1"
    }
}
